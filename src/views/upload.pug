extends base.pug

block content 
    div.upload__container
        div.upload__video 
            video#preview(crossorigin="use-credentials") 
            button#actionBtn.social__btn Start Recording
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data") 
            label(for="video") Video File
            input(type="file", name="video", accept="video/*", id="video", required)
            label(for="thumb") Thumbnail File
            input(type="file", name="thumb", accept="image/*", id="thumb", required)
            input(name="title", placeholder="Title", required, maxlength=80)
            input(name="description", placeholder="Description", required, minlength=2)
            input(name="hashtags", placeholder="Hashtags, separated by comma.", required)
            input(value="Upload Video", type="submit")

block scripts
    script(src="/static/js/recorder.js") 